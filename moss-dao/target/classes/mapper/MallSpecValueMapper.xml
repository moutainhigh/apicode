<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.ycandyz.master.dao.mall.goodsManage.MallSpecValueDao">
    <resultMap id="BaseResultMap" type="com.ycandyz.master.entities.mall.goodsManage.MallSpecValue">
        <id column="id" property="id" jdbcType="BIGINT" />
        <id column="spec_no" property="specNo" jdbcType="VARCHAR"/>
        <id column="spec_value" property="specValue" jdbcType="VARCHAR"/>
        <id column="sort_value" property="sortValue" jdbcType="INTEGER"/>
        <id column="status" property="status" jdbcType="INTEGER"/>
        <id column="created_time" property="createdTime" jdbcType="TIMESTAMP" />
        <id column="updated_time" property="updatedTime" jdbcType="TIMESTAMP" />
    </resultMap>

    <insert id="addMallSpecValue" parameterType="com.ycandyz.master.entities.mall.goodsManage.MallSpecValue">
        insert into mall_spec_value (spec_no,spec_value,sort_value,status,created_time,updated_time)
        values (#{specNo},#{specValue},#{sortValue},#{status},now(),now());
    </insert>

    <delete id="delMallSpecValueBySpecNo" parameterType="java.lang.String">
        delete from mall_spec_value where spec_no = #{specNo};
    </delete>
    <select id="selMallSpecValueBySpecNo" parameterType="java.lang.String" resultMap="BaseResultMap">
         select * from mall_spec_value  where spec_no=#{specNo};
    </select>
    <select id="selMallSpecValueByKeyWord" resultMap="BaseResultMap" parameterType="java.lang.String">
        select * from mall_spec_value  where spec_value like "%"#{keyWord}"%";
</select>

</mapper>